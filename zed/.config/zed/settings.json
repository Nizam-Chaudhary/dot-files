{
  // =============== Appearance & Theme ===============
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "icon_theme": "Material Icon Theme",
  "tab_bar": {
    "show_nav_history_buttons": false,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_close_button": "always",
    "show_diagnostics": "errors",
  },
  "title_bar": {
    "show_branch_icon": true,
  },

  // =============== Font & Typography ===============
  "ui_font_family": "Maple Mono NF",
  "ui_font_size": 18,
  "buffer_font_family": "Maple Mono NF",
  "buffer_font_size": 18,
  "buffer_font_weight": 320,
  "buffer_line_height": {
    "custom": 1.6,
  },
  // "buffer_font_features": {
  //   "calt": true,
  //   "cv01": 1,
  //   "cv31": 1,
  //   "liga": true,
  //   "ss01": true,
  //   "ss02": true,
  //   "ss03": true,
  //   "ss04": true,
  //   "ss05": true,
  //   "ss06": true,
  //   "ss07": true,
  //   "ss08": true,
  //   "ss09": true
  // },

  // =============== Editor Behavior ===============
  "base_keymap": "VSCode",
  "vim_mode": true,
  "cursor_blink": false,
  "which_key": { "enabled": true, "delay_ms": 500 },
  "relative_line_numbers": "enabled",
  "formatter": "language_server",
  "format_on_save": "off",
  "remove_trailing_whitespace_on_save": false,
  "tab_size": 2,
  "colorize_brackets": true,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
  },
  "scrollbar": {
    "show": "always",
  },
  "minimap": {
    "show": "never",
    "display_in": "active_editor",
    "max_width_columns": 80,
    "thumb_border": "full",
  },
  "toolbar": {
    "code_actions": true,
    "quick_actions": false,
  },

  // =============== AI, Copilot & Agent ===============
  "show_edit_predictions": true,
  "edit_predictions": {
    "provider": "zed",
    "enabled_in_text_threads": false,
    "mode": "eager",
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_width": 320,
    "default_model": {
      "model": "gpt-4.1",
      "provider": "copilot_chat",
    },
    "default_profile": "write",
    "dock": "left",
    "inline_assistant_model": {
      "model": "gpt-4.1",
      "provider": "copilot_chat",
    },
  },
  "agent_buffer_font_size": 16,
  "agent_ui_font_size": 20,
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-23075d37-1c04-429e-8535-0643263bbe9a",
      },
    },
  },

  // =============== Language Specific & LSP ===============
  "show_signature_help_after_edits": true,
  "diagnostics": {
    "include_warnings": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 100,
    },
  },
  "inlay_hints": {
    "enabled": false,
  },
  "lsp_document_colors": "inlay",
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true,
      },
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles", "cva"],
      },
    },
  },
  "languages": {
    "CSS": {
      "formatter": "prettier",
    },
    "GraphQL": {
      "formatter": "prettier",
    },
    "HTML": {
      "formatter": "prettier",
    },
    "JSON": {
      "formatter": "prettier",
    },
    "JSONC": {
      "formatter": "prettier",
    },
    "Markdown": {
      "formatter": "prettier",
    },
    "JavaScript": {
      "formatter": "prettier",
      "language_servers": [
        "!typescript-language-server",
        "tsgo",
        "vtsls",
        "..."
      ]
    },
    "TSX": {
      "formatter": "prettier",
      "language_servers": [
        "!typescript-language-server",
        "tsgo",
        "vtsls",
        "..."
      ]
    },
    "TypeScript": {
      "formatter": "prettier",
      "language_servers": [
        "!typescript-language-server",
        "tsgo",
        "vtsls",
        "..."
      ]
    },
    "YAML": {
      "formatter": "prettier",
    },
  },
  "prettier": {
    "allowed": true,
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss",
    ],
    "tabWidth": 2,
  },

  // =============== Panels & UI Layout ===============
  "active_pane_modifiers": {
    "border_size": 2,
  },
  "project_panel": {
    "default_width": 320,
    "dock": "right",
  },
  "outline_panel": {
    "default_width": 320,
    "dock": "right",
  },
  "git_panel": {
    "default_width": 320,
    "dock": "right",
    "status_style": "label_color",
    "tree_view": false,
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15,
  },
  "collaboration_panel": {
    "button": true,
    "default_width": 280,
  },
  "notification_panel": {
    "button": true,
    "dock": "left",
    "default_width": 280,
  },
  "debugger": {
    "button": true,
    "dock": "bottom",
  },

  // =============== Terminal ===============
  "terminal": {
    "button": true,
    "dock": "bottom",
    "env": {
      "EDITOR": "zed --wait",
    },
    "font_family": "Maple Mono NF",
    "font_size": 15,
    "font_weight": 320,
    "shell": "system",
  },

  // =============== Project, Files & Search ===============
  "file_finder": {
    "git_status": true,
    "include_ignored": "smart",
    "modal_max_width": "medium",
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/.turbo",
    "**/.vscode-test",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
  ],
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 100,
    "inline_blame": {
      "show_commit_summary": true,
      "delay_ms": 100,
    },
  },
  "search": {
    "button": true,
    "center_on_match": false,
    "regex": false,
  },
  "seed_search_query_from_cursor": "selection",

  // =============== Auto-installed Extensions ===============
  "auto_install_extensions": {
    "basher": true,
    "biome": true,
    "caddyfile": true,
    "comment": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "github-actions": true,
    "graphql": true,
    "html": true,
    "ini": true,
    "log": true,
    "oxc": true,
    "make": true,
    "material-icon-theme": true,
    "mcp-server-context7": true,
    "mdx": true,
    "nginx": true,
    "prisma": true,
    "rainbow-csv": true,
    "sql": true,
    "terraform": true,
    "toml": true,
    "tsgo": true,
    "catppuccin": true,
  },

  // =============== Miscellaneous ===============
  "redact_private_values": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "use_system_path_prompts": false,
  "use_system_prompts": false,
}
