[commit]
	gpgsign = true
[core]
	editor = vim
[init]
	defaultBranch = main
[pull]
	rebase = false
[push]
	autoSetupRemote = true
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  ; dark = true      # or light = true, or omit for auto-detection
  side-by-side = true
  line-number = true
[merge]
  conflictStyle = zdiff3
[credential]
	credentialStore = gpg
